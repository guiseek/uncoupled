{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@uncoupled/library/data-access": [
        "libs/library/data-access/src/index.ts"
      ],
      "@uncoupled/shared/data-access": ["libs/shared/data-access/src/index.ts"],
      "@uncoupled/shared/ui-layout": ["libs/shared/ui-layout/src/index.ts"],
      "@uncoupled/shared/util-core": ["libs/shared/util-core/src/index.ts"],
      "@uncoupled/shared/util-test": ["libs/shared/util-test/src/index.ts"],
      "@uncoupled/user/data-access": ["libs/user/data-access/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
